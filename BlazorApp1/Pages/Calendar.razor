@page "/calendar"

<PageTitle>Calendar</PageTitle>


<div>
<table bgcolor="lightgrey" align="center" 
                            cellspacing="6" cellpadding="6" style="border: 1px solid black;">
                    
                          
                    
                            <caption align="top" style="color: black; text-align: center;">
                                    <button @onclick="changemonth1"id="defaultbutton" style="padding-left: 8px; padding-right: 8px;padding-top:2px">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                                        </svg>
                                    </button>
                                   @month 
                                    <button @onclick="changemonth2"id="defaultbutton" style="padding-left: 8px; padding-right: 8px;padding-top:2px">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                                        </svg>
                                    </button>
                                    
                            </caption>
                    
                          
                    
                            <thead>
                                <tr>
                                    <!-- Here we have applied inline style 
                                        to make it more attractive-->
                                    <th style="color: black; background-color: rgb(127, 180, 240);">
                                        Sun</th>
