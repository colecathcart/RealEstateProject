                                    <td style="background-color: white; color: grey;">5</td>
                                    <td style="background-color: white; color: grey;">6</td>
                                </tr>
                            </tbody>
                        </table>
                        </div>
                        <div>
                            <p style="display: inline-block;text-align:left;padding-top: 10px;padding-left: 30px;">Available:</p>
                            <div style="display: inline-block;background-color: rgb(202, 232, 197);height: 20px; width: 20px;"></div>
                            <p style="display: inline-block;padding-left: 10px;">Unavailable:</p>
                            <div style="display: inline-block;background-color: rgb(235, 202, 197); height: 20px; width: 20px;"></div>
                        </div>
                           

@code {
  
    private string selected = "none";

    private bool click = false;

    private string month = "December";

    private void clicked(){
        click = !click;
        if (!click){
            selected = "none";
        } else {
            selected = "2px solid black";
        }
    }

    private void changemonth1(){
        month = "December";
    }

    private void changemonth2(){
        month = "January";
    }
}